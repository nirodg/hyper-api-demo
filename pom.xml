        <dependency>
            <groupId>dev.hyperapi</groupId>
            <artifactId>quarkus-hyperapi-processor</artifactId>
            <version>0.1.0-SNAPSHOT</version>
            <scope>compile</scope>
        </dependency>

        <!-- Quarkus core for REST & JPA -->
        <dependency>
            <groupId>io.quarkus</groupId>
            <artifactId>quarkus-rest</artifactId>
        </dependency>
